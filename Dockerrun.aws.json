{
    "AWSEBDockerrunnVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "rudy207/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "rudy207/nginx",            
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        },
        {
            "name": "server",
            "image": "rudy207/server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "rudy207/worker",
            "hostname": "worker",
            "essential": false
        }
    ]
}